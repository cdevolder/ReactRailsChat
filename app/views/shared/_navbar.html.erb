<div class="navbar-chat">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-chat-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Navigation -->
  <div class="navbar-chat-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <!-- Logout link (when logged in) -->
      <div class="navbar-chat-item">
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
        <% end %>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-chat-item navbar-chat-link" %>
    <% end %>
  </div>

  <!-- Navigation appearing on mobile only -->
  <div class="navbar-chat-item hidden-md hidden-lg">
    <% if user_signed_in? %>
      <!-- Logout link (when logged in) -->
      <div class="navbar-chat-item">
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
        <% end %>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-chat-item navbar-chat-link" %>
    <% end %>
  </div>
</div>
